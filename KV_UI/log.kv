<log_screen>:
    id: log_screen
    radius: [25, 0, 0, 0]
    md_bg_color: app.theme_cls.primary_color
    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {'top': 1}  # 将 MDBoxLayout 定位到窗口的顶部
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1  # 设置背景颜色为红色，格式为 (R, G, B, A)
            Rectangle:
                pos: self.pos
                size: self.size

        MDTopAppBar:
            title: "Development Log"

        MDScrollView:
            id: scrollview0
            MDGridLayout:
                id: devlog_grid
                cols: 1
                spacing: dp(20)
                padding: dp(20)
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # 设置背景颜色为红色，格式为 (R, G, B, A)
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(24)
            MDRaisedButton:
                id: log_butt
                text: 'BACK'
                size_hint_y: None
                width: dp(24)  # 调整按钮的宽度
                pos_hint: {'center_x': 0.8}
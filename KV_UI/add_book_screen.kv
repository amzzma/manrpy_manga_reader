<add_book_screen>:
    id: screen1
    radius: [25, 0, 0, 0]
    md_bg_color: app.theme_cls.primary_color

    BoxLayout:
        orientation: "vertical"
        pos_hint: {'top': 1}  # 将 MDBoxLayout 定位到窗口的顶部
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 1  # 设置背景颜色为红色，格式为 (R, G, B, A)
            Rectangle:
                pos: self.pos
                size: self.size

        MDTopAppBar:
            title: "Add Book"

        MDScrollView:
            id: scrollview0
            MDGridLayout:
                id: grid1
                cols: 3
                spacing: dp(10)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 0.5, 1  # 设置背景颜色为红色，格式为 (R, G, B, A)
                    Rectangle:
                        pos: self.pos
                        size: self.size


        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(48)  # 调整按钮的高度

            # 这是底部中间的按钮
            MDRaisedButton:
                id: add_book_butt
                text: 'BACK'
                size_hint_y: None
                width: dp(120)  # 调整按钮的宽度
                pos_hint: {'center_x': 0.5}

